<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonDuck"
            android:src="@drawable/ducky"
            android:onClick="buttonClicked"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonGator"
            android:src="@drawable/gators"
            android:onClick="buttonCLicked"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonGeese"
            android:src="@drawable/geese"
            android:onClick="buttonClicked"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonFrog"
            android:src="@drawable/images"
            android:onClick="buttonClicked"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonBird"
            android:src="@drawable/loonbird"
            android:onClick="buttonClicked"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="128dp"
            android:id="@+id/imageButtonsSwamp"
            android:src="@drawable/swamp"
            android:onClick="buttonClicked"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stop Sounds"
            android:id="@+id/button" />
    </TableRow>

</LinearLayout>
